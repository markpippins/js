{
  "name": "filezilla-clone",
  "private": true,
  "version": "0.0.0",
  "description": "",
  "author": "",
  "main": "dist/electron/main.cjs",
  "homepage": "./",
  "type": "module",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --port 4201",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron": "wait-on http://localhost:4201 && electron .",
    "electron-dev": "npm-run-all --parallel start electron",
    "electron-pack": "ng build --configuration=production && npm run build-electron && electron-builder",
    "build-electron": "bun x tsc electron/main.ts --outDir dist/electron --target ES2020 --module commonjs --esModuleInterop --skipLibCheck --resolveJsonModule && node scripts/rename-to-cjs.mjs"
  },
  "dependencies": {
    "@angular-devkit/build-angular": "^20.3.5",
    "@angular/animations": "^20.3.4",
    "@angular/cli": "^20.3.5",
    "@angular/common": "^20.3.4",
    "@angular/compiler": "^20.3.4",
    "@angular/compiler-cli": "^20.3.4",
    "@angular/core": "^20.3.4",
    "@angular/forms": "^20.3.4",
    "@angular/platform-browser": "^20.3.4",
    "@angular/platform-browser-dynamic": "^20.3.4",
    "@angular/router": "^20.3.4",
    "@types/ftp": "^0.3.36",
    "fs-extra": "^11.3.2",
    "ftp": "^0.3.10",
    "npx": "^10.2.2",
    "rxjs": "^7.8.2",
    "ssh2-sftp-client": "^12.0.1",
    "tslib": "^2.8.1",
    "wait-on": "^9.0.1",
    "zone.js": "^0.15.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/node": "^22.13.10",
    "autoprefixer": "~10",
    "dotenv": "^16.4.7",
    "electron": "^38.2.2",
    "electron-builder": "^26.0.12",
    "eslint": "^9.21.0",
    "globals": "^15.15.0",
    "npm-run-all": "^4.1.5",
    "postcss": "~8",
    "prettier": "^3.5.3",
    "tailwindcss": "~3",
    "typescript": "~5.8.0",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0"
  },
  "build": {
    "appId": "com.filezilla.clone",
    "npmRebuild": false,
    "productName": "FileZilla Clone",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}