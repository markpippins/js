{
	"name": "server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "tsdown",
		"check-types": "tsc -b",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "bun run --hot src/index.ts",
		"start": "bun run dist/index.js",
		"db:push": "prisma db push",
		"db:studio": "prisma studio",
		"db:generate": "prisma generate",
		"db:migrate": "prisma migrate dev"
	},
	"dependencies": {
		"dotenv": "^17.2.1",
		"zod": "^4.0.2",
		"@orpc/server": "^1.8.4",
		"@orpc/client": "^1.8.4",
		"express": "^5.1.0",
		"cors": "^2.8.5",
		"@prisma/client": "^6.13.0",
		"better-auth": "^1.3.7"
	},
	"devDependencies": {
		"tsdown": "^0.14.1",
		"typescript": "^5.8.2",
		"@types/express": "^5.0.1",
		"@types/cors": "^2.8.17",
		"@types/bun": "^1.2.6",
		"prisma": "^6.13.0"
	}
}
